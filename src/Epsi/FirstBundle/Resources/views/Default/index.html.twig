                                        {% else %} 
                                        {% if is_granted('ROLE_USER') %} 
                                            <p>Vous êtes connecté en tant que {{ app.user.username }} (Utilisateur)</p> 
                                        {% endif %} 
                                        {% endif %}
                                        </div>
				</div>
			</div>
		</div>
            </div>
	</section>
         
{% endblock %}