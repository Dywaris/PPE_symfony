{# empty Twig template #}
{% extends "EpsiFirstBundle::layout.html.twig" %}
{% block title %} {{ parent() }} - Abonnement {% endblock %}
{% block contenu %} 
    <section class="section-page-top set-bg">
        <img class="set-bg" src="{{asset('bundles/epsifirst/images/page-top-bg.jpg')}}" alt="">
        <div class="container text-white">
            <h3>Th√©me</h3>
        </div>
    </section>
    <section class="contact-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 contact-text">
                    <h3>Ajout d'abonnement</h3>
                </div>
                <div class="col-lg-8">
                    <form class="contact-form">
                        {{form_start(form)}}
                        <div class="row">
                            <div class="col-md-12">
                                {{ form_row(form.Prix) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(form.Type) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(form.MoyenPaiment) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(form.Ajouter,{'attr': {'class':'site-btn'}}) }}
                            </div>
                            {{message}}


                        </div>
                        {{ form_end(form)}}
                    </form>
                </div>
            </div>
        </div>
    </section>

{% endblock %}