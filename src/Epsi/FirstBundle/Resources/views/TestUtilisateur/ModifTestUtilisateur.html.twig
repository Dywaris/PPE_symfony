{% extends "EpsiFirstBundle::layout.html.twig" %}
{% block title %} {{ parent() }} - Test & Utilisateur {% endblock %}
{% block contenu %}
    {% if is_granted('ROLE_SUPER_ADMIN') %}
    <section class="section-page-top set-bg">
        <img class="set-bg" src="{{asset('bundles/epsifirst/images/page-top-bg.jpg')}}" alt="">
        <div class="container text-white">
            <h3>Test</h3>
        </div>
    </section>
    <section class="contact-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 contact-text">
                    <h3>Modification de Test & Utilisateur</h3>
                </div>
                <div class="col-lg-8">
                    <form  method="post" class="contact-form">
                        {{form_start(form)}}
                        <div class="row">
                            <div class="col-md-12">
                                {{ form_row(form.date) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(form.test) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(form.utilisateur) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(form.Envoyer,{'attr': {'class':'site-btn'}}) }}
                            </div>

                        </div>
                        {{ form_end(form)}}
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endif %}

{% endblock %}