{% extends "EpsiFirstBundle::layout.html.twig" %}
{% block title %} {{ parent() }} - Utilisateur {% endblock %}
{% block contenu %} 
    {% if is_granted('ROLE_SUPER_ADMIN') %}
    <section class="section-page-top set-bg">
        <img class="set-bg" src="{{asset('bundles/epsifirst/images/page-top-bg.jpg')}}" alt="">
        <div class="container text-white">
            <h3></h3>
        </div>
    </section>
    <section class="contact-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 contact-text">
                    <h3>Ajout d'un utilisateur en tant que Super Admin</h3>
                </div>
                <div class="col-lg-8">
                    <form method="post" class="contact-form">
                        {{form_start(form)}}
                        <div class="row">
                            <div class="col-md-12">
                                {{ form_row(form.nom) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(form.prenom) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(form.username) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(form.password) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(form.CodePostal) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(form.Ville) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(form.Adresse) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(form.Abonnement) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(form.Entreprise) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(form.Ajouter,{'attr': {'class':'site-btn'}}) }}
                            </div>
                            {{message}}


                        </div>
                        {{ form_end(form)}}
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endif %}
{% endblock %}